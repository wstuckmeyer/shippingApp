<h1>new Users</h1>

<%= form_for :user, url: users_path do |f| %>
			<% if @user.error.any? %>
				<% @user.error.full_messages.each do |msg| %>
					<div class="alert alert-danger"><%= msg %></div>
			<% end %>
	<p>
		<%= f.label :username %><br>
		<%= f.text_field :username %><br>
	</p>
	<p>
		<%= f.label :password %><br>
		<%= f.text_field :password %><br>
	</p>
	
	<p>
		<%= f.submit %>
	</p>

<% end %>
