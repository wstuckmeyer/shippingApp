<h1>new Ships</h1>

<%= form_for :ship, url: ships_path do |f| %>
			<% if @ship.error.any? %>
				<% @ship.error.full_messages.each do |msg| %>
					<div class="alert alert-danger"><%= msg %></div>
			<% end %>
	<p>
		<%= f.label :name %><br>
		<%= f.text_field :containers %><br>
	</p>
	<p>
		<%= f.label :location %><br>
		<%= f.text_field :location %><br>
	</p>
	<p>
		<%= f.label :user_id %><br>
		<%= f.text_field :user_id %><br>
	</p>
	
	<p>
		<%= f.submit %>
	</p>

<% end %>
