<h1>new Jobs</h1>

<%= form_for :job, url: jobs_path do |f| %>
			<% if @job.error.any? %>
				<% @job.error.full_messages.each do |msg| %>
					<div class="alert alert-danger"><%= msg %></div>
			<% end %>
	<p>
		<%= f.label :ship_id %><br>
		<%= f.text_field :ship_id  %><br>
	</p>
	<p>
		<%= f.label :job_id %><br>
		<%= f.text_field :job_id %><br>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>